@{
    ViewData["Title"] = "Contacto";
}

<section style="background-color: #785C38;">
    <div class="container mt-5">
        <h1 class="text-center mb-4">
            <span class="material-symbols-outlined">
                bakery_dining
            </span> Contacto
        </h1>


        @if (TempData["Mensaje"] != null)
        {
            <div id="miToast" class="toast align-items-center text-white bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        @TempData["Mensaje"]
                    </div>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }

        <div class="row justify-content-center mb-5">
            <div class="col-md-6">
                <form method="post" action="@Url.Action("Contacto", "Home")">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Correo electronico</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>

                    <div class="mb-3">
                        <label for="mensaje" class="form-label">Mensaje</label>
                        <textarea class="form-control" id="mensaje" name="mensaje" rows="5" required></textarea>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark">Enviar mensaje</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="row justify-content-center text-center mb-4">
            <div>
                <h5>Horarios</h5>
                <p>Lunes a Viernes de 8:00 a 19:00 hs<br>Domingos de 13:00 a 18:00 hs</p>
            </div>
        </div>

        <div class="row justify-content-center mb-5">
            <div class="ratio ratio-16x9">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d22095.790806888235!2d-58.42543656398032!3d-34.59002133305697!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses-419!2sar!4v1745894880435!5m2!1ses-419!2sar" style="border:0;" allowfullscreen loading="lazy"></iframe>
            </div>
        </div>
    </div>
</section>
